{
  "name": "tsi-header",
  "displayName": "TSI Header - st93642",
  "description": "Code generation and headers for 120+ languages with 100% quality assurance",
  "version": "4.0.0",
  "publisher": "st93642",
  "author": {
    "name": "st93642",
    "email": "st93642@students.tsi.lv"
  },
  "icon": "resources/tsi.png",
  "homepage": "https://github.com/st93642/TSI_Header#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/st93642/TSI_Header"
  },
  "bugs": {
    "url": "https://github.com/st93642/TSI_Header/issues",
    "email": "st93642@students.tsi.lv"
  },
  "license": "MIT",
  "keywords": [
    "header",
    "code-header",
    "code-generation",
    "class-generator",
    "boilerplate",
    "ruby",
    "multi-language"
  ],
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other",
    "Formatters",
    "Snippets"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./core/src/extension.js",
  "contributes": {
    "configuration": {
      "title": "TSI Header",
      "properties": {
        "tsiheader.username": {
          "type": "string",
          "description": "Username to use in TSI headers",
          "scope": "resource"
        },
        "tsiheader.email": {
          "type": "string",
          "description": "Email address to use in TSI headers",
          "scope": "resource"
        },
        "tsiheader.studyMode.enableSounds": {
          "type": "boolean",
          "default": false,
          "description": "Enable audio notifications for timer events"
        },
        "tsiheader.studyMode.workDuration": {
          "type": "number",
          "default": 25,
          "minimum": 1,
          "maximum": 120,
          "description": "Work session duration in minutes (1-120)"
        },
        "tsiheader.studyMode.shortBreakDuration": {
          "type": "number",
          "default": 5,
          "minimum": 1,
          "maximum": 60,
          "description": "Short break duration in minutes (1-60)"
        },
        "tsiheader.studyMode.longBreakDuration": {
          "type": "number",
          "default": 15,
          "minimum": 1,
          "maximum": 120,
          "description": "Long break duration in minutes (1-120)"
        },
        "tsiheader.studyMode.sessionsBeforeLongBreak": {
          "type": "number",
          "default": 4,
          "minimum": 1,
          "maximum": 10,
          "description": "Number of work sessions before a long break (1-10)"
        }
      }
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "tsi-header-explorer",
          "title": "TSI Header",
          "icon": "$(mortar-board)"
        }
      ]
    },
    "views": {
      "tsi-header-explorer": [
        {
          "id": "tsi-commands",
          "name": "TSI Commands",
          "icon": "$(list-unordered)",
          "when": "true"
        },
        {
          "id": "tsi-projects",
          "name": "TSI Projects",
          "icon": "$(folder)",
          "when": "true"
        }
      ]
    },
    "commands": [
      {
        "command": "tsiheader.insertHeader",
        "title": "Insert Header",
        "category": "TSI Header",
        "icon": "$(add)"
      },
      {
        "command": "tsiheader.updateHeader",
        "title": "Update Header",
        "category": "TSI Header",
        "icon": "$(sync)"
      },
      {
        "command": "tsiheader.addClass",
        "title": "Add class",
        "category": "TSI Header",
        "icon": "$(symbol-class)"
      },
      {
        "command": "tsiheader.addCodeBase",
        "title": "Add code base",
        "category": "TSI Header",
        "icon": "$(code)"
      },
      {
        "command": "tsiheader.createTSIProject",
        "title": "Create TSI Project",
        "category": "TSI Header",
        "icon": "$(folder-opened)"
      },
      {
        "command": "tsiheader.removeHeader",
        "title": "Remove Header",
        "category": "TSI Header",
        "icon": "$(trash)"
      },
      {
        "command": "tsiheader.createCProject",
        "title": "Create C TSI Project",
        "category": "TSI Header",
        "icon": "$(file-code)"
      },
      {
        "command": "tsiheader.createCppProject",
        "title": "Create C++ TSI Project",
        "category": "TSI Header",
        "icon": "$(file-code)"
      },
      {
        "command": "tsiheader.createPythonProject",
        "title": "Create Python TSI Project",
        "category": "TSI Header",
        "icon": "$(snake)"
      },
      {
        "command": "tsiheader.createJavaProject",
        "title": "Create Java TSI Project",
        "category": "TSI Header",
        "icon": "$(coffee)"
      },
      {
        "command": "tsiheader.createRustProject",
        "title": "Create Rust TSI Project",
        "category": "TSI Header",
        "icon": "$(tools)"
      },
      {
        "command": "tsiheader.createRubyProject",
        "title": "Create Ruby TSI Project",
        "category": "TSI Header",
        "icon": "$(ruby)"
      },
      {
        "command": "tsiheader.createPhpProject",
        "title": "Create PHP TSI Project",
        "category": "TSI Header",
        "icon": "$(globe)"
      },
      {
        "command": "tsiheader.startStudySession",
        "title": "Start Study Session",
        "category": "Study Mode",
        "icon": "$(play)"
      },
      {
        "command": "tsiheader.pauseStudyTimer",
        "title": "Pause/Resume Study Timer",
        "category": "Study Mode",
        "icon": "$(debug-pause)"
      },
      {
        "command": "tsiheader.stopStudySession",
        "title": "Stop Study Session",
        "category": "Study Mode",
        "icon": "$(stop)"
      },
      {
        "command": "tsiheader.viewStudyStats",
        "title": "View Study Statistics",
        "category": "Study Mode",
        "icon": "$(graph)"
      },
      {
        "command": "tsiheader.configureStudyMode",
        "title": "Configure Study Mode",
        "category": "Study Mode",
        "icon": "$(settings-gear)"
      },
      {
        "command": "tsiheader.resetStudyProgress",
        "title": "Reset Study Progress",
        "category": "Study Mode",
        "icon": "$(clear-all)"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "tsiheader.insertHeader",
          "when": "editorTextFocus",
          "group": "7_modification"
        },
        {
          "command": "tsiheader.updateHeader",
          "when": "editorTextFocus",
          "group": "7_modification"
        },
        {
          "command": "tsiheader.removeHeader",
          "when": "editorTextFocus",
          "group": "7_modification"
        },
        {
          "command": "tsiheader.addClass",
          "when": "editorTextFocus",
          "group": "7_modification"
        },
        {
          "command": "tsiheader.addCodeBase",
          "when": "editorTextFocus",
          "group": "7_modification"
        },
        {
          "command": "tsiheader.startStudySession",
          "when": "true",
          "group": "8_study"
        },
        {
          "command": "tsiheader.pauseStudyTimer",
          "when": "true",
          "group": "8_study"
        },
        {
          "command": "tsiheader.stopStudySession",
          "when": "true",
          "group": "8_study"
        },
        {
          "command": "tsiheader.viewStudyStats",
          "when": "true",
          "group": "8_study"
        },
        {
          "command": "tsiheader.resetStudyProgress",
          "when": "true",
          "group": "8_study"
        }
      ],
      "explorer/context": [
        {
          "command": "tsiheader.createTSIProject",
          "when": "explorerResourceIsFolder",
          "group": "7_modification"
        }
      ],
      "editor/title/context": [
        {
          "command": "tsiheader.insertHeader",
          "when": "editorTextFocus",
          "group": "1_modification"
        },
        {
          "command": "tsiheader.updateHeader",
          "when": "editorTextFocus",
          "group": "1_modification"
        },
        {
          "command": "tsiheader.removeHeader",
          "when": "editorTextFocus",
          "group": "1_modification"
        },
        {
          "command": "tsiheader.addClass",
          "when": "editorTextFocus",
          "group": "1_modification"
        },
        {
          "command": "tsiheader.addCodeBase",
          "when": "editorTextFocus",
          "group": "1_modification"
        },
        {
          "command": "tsiheader.startStudySession",
          "when": "true",
          "group": "2_study"
        },
        {
          "command": "tsiheader.pauseStudyTimer",
          "when": "true",
          "group": "2_study"
        },
        {
          "command": "tsiheader.stopStudySession",
          "when": "true",
          "group": "2_study"
        },
        {
          "command": "tsiheader.viewStudyStats",
          "when": "true",
          "group": "2_study"
        },
        {
          "command": "tsiheader.resetStudyProgress",
          "when": "true",
          "group": "2_study"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "ruby scripts/compile.rb",
    "watch": "ruby scripts/watch.rb",
    "test": "node unified_test_suite.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0"
  }
}
