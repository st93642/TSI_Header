{
  "name": "tsi-header",
  "displayName": "TSI Header - st93642",
  "description": "Code generation and professional headers for 90 programming languages with 100% quality assurance - Transport and Telecommunication Institute",
  "version": "3.0.3",
  "publisher": "st93642",
  "author": {
    "name": "st93642",
    "email": "st93642@students.tsi.lv"
  },
  "icon": "tsi.png",
  "homepage": "https://github.com/st93642/TSI_Header#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/st93642/TSI_Header"
  },
  "bugs": {
    "url": "https://github.com/st93642/TSI_Header/issues",
    "email": "st93642@students.tsi.lv"
  },
  "license": "MIT",
  "keywords": [
    "header",
    "tsi",
    "transport-telecommunication-institute",
    "code-header",
    "code-generation",
    "class-generator",
    "boilerplate",
    "institutional-branding",
    "ruby",
    "multi-language"
  ],
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other",
    "Formatters",
    "Snippets"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./src/extension.js",
  "contributes": {
    "configuration": {
      "title": "TSI Header",
      "properties": {
        "tsiheader.username": {
          "type": "string",
          "description": "Username to use in TSI headers",
          "scope": "resource"
        },
        "tsiheader.email": {
          "type": "string",
          "description": "Email address to use in TSI headers",
          "scope": "resource"
        },
        "tsiheader.autoUpdate": {
          "type": "boolean",
          "default": false,
          "description": "Automatically update TSI header when file is saved",
          "scope": "resource"
        }
      }
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "tsi-header-explorer",
          "title": "TSI Header",
          "icon": "$(mortar-board)"
        }
      ]
    },
    "views": {
      "tsi-header-explorer": [
        {
          "id": "tsi-commands",
          "name": "TSI Commands",
          "when": "true"
        },
        {
          "id": "tsi-projects",
          "name": "TSI Projects",
          "when": "true"
        }
      ]
    },
    "commands": [
      {
        "command": "tsiheader.insertHeader",
        "title": "Insert Header",
        "category": "TSI Header",
        "icon": "$(add)"
      },
      {
        "command": "tsiheader.updateHeader",
        "title": "Update Header",
        "category": "TSI Header",
        "icon": "$(sync)"
      },
      {
        "command": "tsiheader.addClass",
        "title": "Add class",
        "category": "TSI Header",
        "icon": "$(symbol-class)"
      },
      {
        "command": "tsiheader.addCodeBase",
        "title": "Add code base",
        "category": "TSI Header",
        "icon": "$(code)"
      },
      {
        "command": "tsiheader.createTSIProject",
        "title": "Create TSI Project",
        "category": "TSI Header",
        "icon": "$(folder-opened)"
      }
    ],
    "menus": {}
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "ruby scripts/compile.rb",
    "watch": "ruby scripts/watch.rb",
    "test": "ruby spec/production_test.rb"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0"
  }
}
