{
  "name": "tsi-header",
  "displayName": "TSI Header - st93642",
  "description": "Code generation and professional headers for 90 programming languages with 100% quality assurance - Transport and Telecommunication Institute",
  "version": "2.1.0",
  "publisher": "st93642",
  "author": {
    "name": "st93642",
    "email": "st93642@students.tsi.lv"
  },
  "icon": "tsi.png",
  "homepage": "https://github.com/st93642/TSI_Header#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/st93642/TSI_Header"
  },
  "bugs": {
    "url": "https://github.com/st93642/TSI_Header/issues",
    "email": "st93642@students.tsi.lv"
  },
  "license": "MIT",
  "keywords": [
    "header",
    "tsi",
    "transport-telecommunication-institute",
    "code-header",
    "code-generation",
    "class-generator",
    "boilerplate",
    "institutional-branding",
    "ruby",
    "multi-language"
  ],
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other",
    "Formatters",
    "Snippets"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./src/extension.js",
  "contributes": {
    "configuration": {
      "title": "TSI Header",
      "properties": {
        "tsiheader.username": {
          "type": "string",
          "description": "Username to use in TSI headers",
          "scope": "resource"
        },
        "tsiheader.email": {
          "type": "string",
          "description": "Email address to use in TSI headers",
          "scope": "resource"
        },
        "tsiheader.autoUpdate": {
          "type": "boolean",
          "default": false,
          "description": "Automatically update TSI header when file is saved",
          "scope": "resource"
        }
      }
    },
    "commands": [
      {
        "command": "tsiheader.insertHeader",
        "title": "Insert Header",
        "category": "TSI Header"
      },
      {
        "command": "tsiheader.updateHeader",
        "title": "Update Header",
        "category": "TSI Header"
      },
      {
        "command": "tsiheader.addClass",
        "title": "Add class",
        "category": "TSI Header"
      },
      {
        "command": "tsiheader.addCodeBase",
        "title": "Add code base",
        "category": "TSI Header"
      },
      {
        "command": "tsiheader.createTSIProject",
        "title": "Create TSI Project",
        "category": "TSI Header",
        "icon": "$(folder-opened)"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "tsiheader.insertHeader",
          "group": "navigation"
        },
        {
          "command": "tsiheader.updateHeader",
          "group": "navigation"
        },
        {
          "command": "tsiheader.addClass",
          "when": "editorTextFocus && (resourceExtname =~ /\\.(java|cpp|cxx|cc|c\\+\\+|cs|py|rb|php|swift|dart|scala|kt|ts|js)$/)",
          "group": "navigation"
        },
        {
          "command": "tsiheader.addCodeBase",
          "when": "editorTextFocus",
          "group": "navigation"
        }
      ],
      "editor/title": [
        {
          "command": "tsiheader.insertHeader",
          "group": "navigation"
        },
        {
          "command": "tsiheader.updateHeader",
          "group": "navigation"
        },
        {
          "command": "tsiheader.addClass",
          "when": "editorTextFocus && (resourceExtname =~ /\\.(java|cpp|cxx|cc|c\\+\\+|cs|py|rb|php|swift|dart|scala|kt|ts|js)$/)",
          "group": "navigation"
        },
        {
          "command": "tsiheader.addCodeBase",
          "when": "editorTextFocus",
          "group": "navigation"
        }
      ],
      "explorer/context": [
        {
          "command": "tsiheader.createTSIProject",
          "group": "1_tsi@1"
        }
      ],
      "commandPalette": [
        {
          "command": "tsiheader.insertHeader",
          "when": "editorTextFocus"
        },
        {
          "command": "tsiheader.updateHeader",
          "when": "editorTextFocus"
        },
        {
          "command": "tsiheader.addClass",
          "when": "editorTextFocus && (resourceExtname =~ /\\.(java|cpp|cxx|cc|c\\+\\+|cs|py|rb|php|swift|dart|scala|kt|ts|js)$/)"
        },
        {
          "command": "tsiheader.addCodeBase",
          "when": "editorTextFocus"
        },
        {
          "command": "tsiheader.createTSIProject"
        }
      ]
    },
    "keybindings": [
      {
        "command": "tsiheader.insertHeader",
        "key": "ctrl+alt+h",
        "mac": "cmd+alt+h",
        "when": "editorTextFocus"
      },
      {
        "command": "tsiheader.updateHeader",
        "key": "ctrl+alt+u",
        "mac": "cmd+alt+u",
        "when": "editorTextFocus"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "ruby scripts/compile.rb",
    "watch": "ruby scripts/watch.rb",
    "test": "ruby spec/production_test.rb"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0"
  }
}
