{
  "name": "tsi-header",
  "displayName": "TSI Header - st93642",
  "description": "Professional header generator for 84+ programming languages with TSI institutional branding - Transport and Telecommunication Institute",
  "version": "1.1.0",
  "publisher": "st93642",
  "author": {
    "name": "st93642",
    "email": "st93642@students.tsi.lv"
  },
  "icon": "tsi.png",
  "homepage": "https://github.com/st93642/TSI_Header#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/st93642/TSI_Header"
  },
  "bugs": {
    "url": "https://github.com/st93642/TSI_Header/issues",
    "email": "st93642@students.tsi.lv"
  },
  "license": "MIT",
  "keywords": [
    "header",
    "tsi",
    "transport-telecommunication-institute",
    "code-header",
    "institutional-branding",
    "ruby",
    "multi-language"
  ],
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other",
    "Formatters",
    "Snippets"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./src/extension.js",
  "contributes": {
    "configuration": {
      "title": "TSI Header",
      "properties": {
        "tsiheader.username": {
          "type": "string",
          "description": "Username to use in TSI headers",
          "scope": "resource"
        },
        "tsiheader.email": {
          "type": "string", 
          "description": "Email address to use in TSI headers",
          "scope": "resource"
        },
        "tsiheader.autoUpdate": {
          "type": "boolean",
          "default": false,
          "description": "Automatically update TSI header when file is saved",
          "scope": "resource"
        }
      }
    },
    "commands": [
      {
        "command": "tsiheader.insertHeader",
        "title": "Insert Header",
        "category": "TSI Header"
      },
      {
        "command": "tsiheader.updateHeader",
        "title": "Update Header",
        "category": "TSI Header"
      },
      {
        "command": "tsiheader.createCodeStructure",
        "title": "Create class/base code",
        "category": "TSI Header"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "tsiheader.insertHeader",
          "group": "navigation"
        },
        {
          "command": "tsiheader.updateHeader",
          "group": "navigation"
        },
        {
          "command": "tsiheader.createCodeStructure",
          "group": "navigation"
        }
      ],
      "editor/title": [
        {
          "command": "tsiheader.insertHeader",
          "group": "navigation"
        },
        {
          "command": "tsiheader.updateHeader",
          "group": "navigation"
        },
        {
          "command": "tsiheader.createCodeStructure",
          "group": "navigation"
        }
      ],
      "commandPalette": [
        {
          "command": "tsiheader.insertHeader",
          "when": "editorTextFocus"
        },
        {
          "command": "tsiheader.updateHeader",
          "when": "editorTextFocus"
        },
        {
          "command": "tsiheader.createCodeStructure",
          "when": "explorerViewletVisible"
        }
      ]
    },
    "keybindings": [
      {
        "command": "tsiheader.insertHeader",
        "key": "ctrl+alt+h",
        "mac": "cmd+alt+h",
        "when": "editorTextFocus"
      },
      {
        "command": "tsiheader.updateHeader",
        "key": "ctrl+alt+u",
        "mac": "cmd+alt+u", 
        "when": "editorTextFocus"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "ruby scripts/compile.rb",
    "watch": "ruby scripts/watch.rb",
    "test": "ruby spec/production_test.rb"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0"
  },
  "dependencies": {}
}